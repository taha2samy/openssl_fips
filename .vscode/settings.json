{
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "testing.displayedTestNames": "short",
    "python.testing.pytestArgs": [
        "new_test/tests", // المكان اللي فيه التستات الجديدة
        "-c",
        "new_test/pytest.ini", // عشان يقرأ الكونفيج بتاعك صح
        "--rootdir=new_test" // عشان يفهم إن ده الـ Root ويدور على conftest.py هناك
    ],
    "python.envFile": "${workspaceFolder}/.env"
}